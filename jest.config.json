{
  "collectCoverage" : true,
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/vendor/",
    "/resources/",
    "/controller/",
    "/test/",
    "/entity/",
    "/seed",
    "/repository/",
    "/telegram/"
  ],
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/tsconfig.build.json"
    }
  },
  "moduleDirectories": [
    "node_modules"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "preset": "ts-jest",
  "rootDir": "./",
  "testRegex": ".test.ts$",
  "moduleNameMapper": {
    "^@src(.*)$": "<rootDir>/src$1"
  },
  "coverageDirectory": "<rootDir>/coverage",
  "testEnvironment": "node"
}
